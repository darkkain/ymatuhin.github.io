/*======================================
=            Default styles            =
======================================*/

global-reset()

.browsehappy
.no-script
	margin 0.2em 0
	background #ccc
	color #000
	padding 0.2em 0

html
button
input
select
textarea
	color textClr

if ie
	img
		vertical-align middle

if !ie
	audio
	canvas
	video
	img
		vertical-align middle

	::-webkit-selection
	::-moz-selection
	::selection
		background #b3d4fc
		text-shadow none